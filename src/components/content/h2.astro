---
import { css } from '../../../styled-system/css'
import { HeadingLink } from './heading-link'

const { id } = Astro.props
---

<div class={css({ mt: '2em' })}>
  <HeadingLink id={id} client:load />
  <h2
    id={id}
    class={css({
      mt: '0.5',
      scrollMarginTop: '16',
      lineHeight: 'tight',
      fontWeight: 'medium',
    })}
  >
    <slot />
  </h2>
</div>
