---
import { SEO } from 'astro-seo'

const { pageTitle, slug } = Astro.props

const siteUrl = import.meta.env.SITE
const siteTitle = 'Buffalo Green Code'

const url = slug ? `${siteUrl}/${slug}` : siteUrl
const title = pageTitle ? `${pageTitle} Â· ${siteTitle}` : siteTitle

const image = `${siteUrl}/meta/meta-img.jpeg`
const description = 'Buffalo Green Code Unified Development Ordinance'
const imageHeight = 600
const imageWidth = 1080
const imageAlt =
  'The city of buffalo overlayed with a semitransparent green background and the Buffalo Green Code logo in the middle'
---

<SEO
  title={title}
  description={description}
  charset="utf-8"
  openGraph={{
    basic: {
      title: title,
      type: 'website',
      image: image,
      // url: url, // Handled automatically with this plugin
    },
    optional: {
      description: description,
    },
    image: {
      alt: imageAlt,
      width: imageWidth,
      height: imageHeight,
      type: 'image/jpeg',
    },
  }}
  twitter={{
    title: title,
    description: description,
    image: image,
    imageAlt: imageAlt,
    card: 'summary_large_image',
  }}
  extend={{
    meta: [
      {
        name: 'viewport',
        content: 'width=device-width,initial-scale=1',
      },
      {
        name: 'google-site-verification',
        content: '2uJ6hXsUDukLmTfNK7Y7jCmnaqyiLptsVDmZ2Ct7Zzk',
      },
    ],
  }}
/>
